<h1>Pending Invitations</h1>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Completed at</th>
    <th></th>
  </tr>
  <%= for invitation <- @invitations do %>
    <tr>
      <td><%= Invitation.full_name(invitation) %></td>
      <td><%= invitation.email %></td>
      <td><%= invitation.completed_at %></td>
      <td>
        <%= link "Cancel invitation", to: classroom_invitation_path(@conn, :delete, @event, invitation), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger btn-sm" %>
      </td>
    </tr>
  <% end %>
</table>

<div class="btn-toolbar">
  <%= link "New invitation", to: classroom_invitation_path(@conn, :new, @event), class: "btn btn-success" %>
</div>
