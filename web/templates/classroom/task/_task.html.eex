<li class="list-group-item">
  <div class="media">
    <div class="media-left">
      <div class="text-muted" style="width: 20px"><%= @line %></div>
    </div>
    <div class="media-body media-middle">
      <%= link @task.title, to: classroom_task_path(@conn, :show, @event, @task) %>
    </div>
    <div class="media-right">
      <%= link to: classroom_task_path(@conn, :toggle_lock, @event, @task), method: :post, class: "btn btn-sm #{if(@task.unlocked_at, do: "btn-outline-warning", else: "btn-outline-success")}" do %>
        <%= if @task.unlocked_at do %>
          Lock
        <% else %>
          Unlock
        <% end %>
      <% end %>
    </div>
  </div>
</li>
