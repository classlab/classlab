<table class="table">
  <tr>
    <th>Event</th>
    <th>Role</th>
    <th></th>
  </tr>
  <%= for membership <- @memberships do %>
    <tr>
      <td><%= membership.event.name %></td>
      <td><%= membership.role.name %></td>
      <td>
        <%= link "Delete", to: account_membership_path(@conn, :delete, membership), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger btn-sm" %>
      </td>
    </tr>
  <% end %>
</table>
