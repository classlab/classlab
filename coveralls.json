{
  "default_stop_words": [
    "defmodule",
    "defrecord",
    "defimpl",
    "defexception",
    "defprotocol",
    "defstruct",
    "def.+(.+\\\\.+).+do",
    "^\\s+use\\s+"
  ],

  "custom_stop_words": [
    "schema"
  ],

  "coverage_options": {
    "treat_no_relevant_lines_as_covered": true,
    "output_dir": "cover/",
    "minimum_coverage": 80
  },

  "skip_files": [
    "lib/bamboo/local_popup_adapter.ex", // will hopefully move to official repo soon
    "lib/classlab.ex",
    "web/web.ex",
    "test/support/*"
  ]
}
